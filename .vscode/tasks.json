{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build test_json",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/testing/test_json/test_json.cpp",
				"${workspaceFolder}/json/*.cc",
				"${workspaceFolder}/stream/stream.cc",
				"${workspaceFolder}/stream/text_stream.cc",
				"-o",
				"${workspaceFolder}/testing/test_json/output/test_json.out"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++.exe"
		}
	]
}
